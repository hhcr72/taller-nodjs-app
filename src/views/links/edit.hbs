<div class="conteiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{ link.id }}" method="POST"> 
                        <div class="form-group">
                            <input type=" text" class="form-control" name="title" value="{{ link.title }}" placeholder="Titulo" autofocus>            
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" value="{{ link.url }}" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id=""  rows="2" class="form-control" placeholder="Descrpcion">{{ link.description }}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                         </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>