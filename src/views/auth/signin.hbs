<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h4>Ingreso al Sistema</h4>
                </div>
                <div class="card-body">
                    <form action="/signin" method="POST">
                        <img src="/img/logo.png" alt="Logo Taller - Ayala Transmisiones" class="card-img-top mx-auto m-2 rounded w-50 ">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Ingresa tu usuario" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Contraseña de aplicación" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Ingresar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>